<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screening_two"
    android:layout_gravity="center"
    android:gravity="center">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <androidx.cardview.widget.CardView
       android:id="@+id/endresultcard"
       android:layout_width="match_parent"
       android:layout_height="110dp"
       android:layout_margin="5dp"
       app:cardCornerRadius="10dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="5dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Risk of Covid-19* :"
             android:textSize="30sp"
             android:fontFamily="@font/open_sans_semibold"
             android:textColor="#000"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="HIGH"
             android:id="@+id/text_result"
             android:textSize="40sp"
             android:textColor="#000"/>
      </LinearLayout>
   </androidx.cardview.widget.CardView>
   <TextView
       android:id="@+id/text_astric"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:text="@string/end_astric"
       android:textSize="12sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/cardView2"
       app:layout_constraintVertical_bias="0.02"
       tools:layout_editor_absoluteX="-9dp" />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="YOUR RESPONSE: "
       android:layout_margin="5dp"
       android:padding="10dp"
       android:textSize="20sp"
       android:textColor="#000"/>
   <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/text_astric"
       android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="How old are you?"
             android:textSize="14sp"
             android:textColor="#605858"/>

         <TextView
             android:id="@+id/getage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="18"
             android:layout_marginTop="5dp"
             android:textColor="#000"
             android:textSize="15sp"/>
      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#000"
          android:layout_margin="5dp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Have you recently faced any of these symptoms?"
             android:textSize="14sp"
             android:textColor="#605858"/>

         <TextView
             android:id="@+id/getsymptom"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="18"
             android:layout_marginTop="5dp"
             android:textColor="#000"
             android:textSize="15sp"/>
      </LinearLayout>

      <View
          android:layout_width="wrap_content"
          android:layout_height="1dp"
          android:background="#000"
          android:layout_margin="5dp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Do any of these apply to you?"
             android:textSize="14sp"
             android:textColor="#605858"/>

         <TextView
             android:id="@+id/getde"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="18"
             android:textColor="#000"
             android:layout_marginTop="5dp"
             android:textSize="15sp"/>
      </LinearLayout>
      <View
          android:layout_width="wrap_content"
          android:layout_height="1dp"
          android:background="#000"
          android:layout_margin="5dp"
          android:id="@+id/feverview"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp"
          android:id="@+id/feverlay">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Please select highest recorded fever?"
             android:textSize="14sp"
             android:textColor="#605858"/>

         <TextView
             android:id="@+id/gettemp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="null"
             android:layout_marginTop="5dp"
             android:textColor="#000"
             android:textSize="15sp"/>
      </LinearLayout>
      <View
          android:layout_width="wrap_content"
          android:layout_height="1dp"
          android:background="#000"
          android:layout_margin="5dp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="14sp"
             android:textColor="#605858"
             android:text="Have you or someone in your family staying with you came in close contact with a laboratory confirmed COVID-19 patient in the last 14 days without protective gear(masks or PPE)?" />

         <TextView
             android:id="@+id/getyn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="18"
             android:layout_marginTop="5dp"
             android:textColor="#000"
             android:textSize="15sp"/>
      </LinearLayout>
   </LinearLayout>
</androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:id="@+id/Faqcard"
       android:layout_margin="5dp"
       app:cardCornerRadius="10dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:gravity="center">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="FAQ'S"
          android:layout_gravity="center"
          android:padding="5dp"
          android:textSize="19sp"
          android:textColor="#050505"
          android:id="@+id/faq"/>
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="25dp"
          android:padding="5dp"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@+id/faq"
          android:layout_alignParentEnd="true"
          android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
   </LinearLayout>
   </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>